# Venice Bar Analyzer - Environment Configuration

# ============================================
# API KEYS (Required)
# ============================================

# Google Places API (New)
# Get from: https://developers.google.com/maps/documentation/places/web-service/get-api-key
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Foursquare API (Optional but recommended)
# Get from: https://location.foursquare.com/developer/
FOURSQUARE_API_KEY=your_foursquare_api_key_here

# ============================================
# DATABASE (Required)
# ============================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/venice_bars

# For local development with SQLite (not recommended for production)
# DATABASE_URL=sqlite:///./venice_bars.db

# ============================================
# COLLECTION SETTINGS (Optional)
# ============================================

# Venice coordinates (center of Venice)
VENICE_CENTER_LAT=45.4333
VENICE_CENTER_LNG=12.3378

# Search radius in meters (default: 5km covers most of Venice)
COLLECTION_RADIUS_METERS=5000

# How often to update crowd data (in minutes)
UPDATE_INTERVAL_MINUTES=15

# Delay between requests to respect rate limits (seconds)
REQUEST_DELAY_SECONDS=2

# Maximum retries for failed requests
MAX_RETRIES=3

# ============================================
# API SERVER (Optional)
# ============================================

# Host and port for FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# Enable CORS for frontend development
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable photo-based capacity estimation (requires ML setup)
ENABLE_PHOTO_ML=false

# Enable review NLP analysis
ENABLE_REVIEW_NLP=true

# Debug mode (verbose logging)
DEBUG=false
