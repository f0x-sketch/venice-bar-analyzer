# Venice Bar Analyzer Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API KEYS (Required)
# ============================================

# Google Places API (New)
# Get from: https://developers.google.com/maps/documentation/places/web-service
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Foursquare API (Optional but recommended)
# Get from: https://developer.foursquare.com/
FOURSQUARE_API_KEY=your_foursquare_api_key_here

# ============================================
# DATABASE (Required)
# ============================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/venice_bars

# For local testing with SQLite (not recommended for production):
# DATABASE_URL=sqlite:///./venice_bars.db

# ============================================
# DATA COLLECTION SETTINGS
# ============================================

# Venice coordinates (Piazza San Marco)
VENICE_CENTER_LAT=45.4333
VENICE_CENTER_LNG=12.3378

# Search radius in meters (3000m = ~3km covers central Venice)
COLLECTION_RADIUS_METERS=3000

# Update interval for live crowd data (minutes)
UPDATE_INTERVAL_MINUTES=15

# Rate limiting delay between requests (seconds)
REQUEST_DELAY_SECONDS=2

# Max retries for failed requests
MAX_RETRIES=3

# ============================================
# API SERVER SETTINGS
# ============================================

# Server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Debug mode (disable in production)
DEBUG=false

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# ============================================
# FEATURE FLAGS
# ============================================

# Enable Foursquare data collection
ENABLE_FOURSQUARE=true

# Enable photo-based capacity estimation (requires ML model)
ENABLE_PHOTO_ML=false

# Enable scheduled data updates
ENABLE_SCHEDULER=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Test mode (uses mock data)
TEST_MODE=false

# Mock data file path (for testing)
MOCK_DATA_PATH=./tests/mock_data.json
